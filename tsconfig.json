{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es5",
    "moduleResolution": "node",
    "strictNullChecks": true,
    "alwaysStrict": true,
    "sourceMap": true,
    "declaration": true,
    "rootDirs": [
      "src",
      "example"
    ],
    "outDir": "lib/",
    "declarationDir": "lib/types"
  },
  "include": [
    "src/**/*",
    "example/**/*"
  ]
}
